<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ndroid="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".mypage.DogInsert">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="강아지 등록"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름: "
            android:padding="10dp"
            android:textSize="15dp"></TextView>
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나이: "
            android:padding="10dp"
            android:textSize="15dp"></TextView>
        <EditText
            android:id="@+id/et_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="성별: "
                android:textSize="20dp">
            </TextView>
            <RadioGroup
                android:orientation="horizontal"
                android:id="@+id/sex">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="남"
                    android:id="@+id/sex1"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="여"
                    android:id="@+id/sex2"/>
            </RadioGroup>

        </TableRow>
    </TableLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="20dp" ></FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/size">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sizeresult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="몸무게"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_weighti"
                android:layout_width="337dp"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <!--        <SeekBar-->
        <!--            android:id="@+id/sizeseek"-->
        <!--            android:layout_width="410dp"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:paddingTop="20dp"-->
        <!--            android:max="50"-->
        <!--            android:thumb="@mipmap/ic_launcher" />-->
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이런 특징도 있어요!"
        android:textStyle="bold"
        android:paddingLeft="10dp" />
    <TableLayout
        android:id="@+id/Table3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <TableRow>
            <CheckBox
                android:id="@+id/ferodogi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="맹견이에요!"
                android:padding="15dp"
                />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_canclei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:text="취소" />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="등록"
            android:layout_marginLeft="15dp"
            android:id="@+id/btn_regi"/>

    </LinearLayout>


</LinearLayout>